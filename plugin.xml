<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.devblocks.com/schema/plugin.xsd">
	<id>wgm.twitter</id>
	<name>Twitter Integration</name>
	<description>This plugin provides integration with Twitter via their API. This plugin is intended to be a bridge used by other plugins to communicate with Twitter services. The plugin introduces record types for Twitter Accounts and Messages.  It supports multiple accounts;  @mentions are automatically synchronized and messages can be replied to from within Cerb.  In addition, it adds a new Virtual Attendant action with the ability to post status updates to Twitter.</description>
	<author>WebGroup Media, LLC.</author>
	<version>1.0.6</version>
	<link>http://www.cerb6.com/</link>
	<image>plugin.png</image>
 
 	<!-- Requirements -->

	<requires>
		<app_version min="6.0" max="6.0.99" />
		<php_extension name="oauth" />
	</requires>
 
	<!-- Plugin Dependencies -->
	
	<dependencies>
		<require plugin_id="cerberusweb.core" version="6.0.0" />
	</dependencies>

	<!-- Patches -->
	
	<patches>
		<patch version="6.0.0" revision="2" file="patches/6.0.0.php" />
	</patches>

	<!-- Exported Classes -->
	
 	<class_loader>
		<file path="api/App.php">
			<class name="WgmTwitter_API" />
		</file>
		
		<file path="api/dao/twitter_account.php">
			<class name="DAO_TwitterAccount" />
			<class name="Model_TwitterAccount" />
			<class name="SearchFields_TwitterAccount" />
			<class name="View_TwitterAccount" />
		</file>
		
		<file path="api/dao/twitter_message.php">
			<class name="Context_TwitterMessage" />
			<class name="DAO_TwitterMessage" />
			<class name="Model_TwitterMessage" />
			<class name="SearchFields_TwitterMessage" />
			<class name="View_TwitterMessage" />
		</file>
	</class_loader>

	<!-- Extensions -->
 
	<extensions>

		<!-- Contexts -->

		<extension point="devblocks.context">
			<id>cerberusweb.contexts.twitter.message</id>
			<name>Twitter Message</name>
			<class>
				<file>api/dao/twitter_message.php</file>
				<name>Context_TwitterMessage</name>
			</class>
			<params>
				<param key="alias" value="twitter_message" />
				<param key="view_class" value="View_TwitterMessage" />
				<param key="options">
					<value>
						<!--<data key="create" />-->
						<data key="find" />
						<!--<data key="snippets" />-->
						<data key="workspace" />
						<data key="va_variable" />
					</value>
				</param>
			</params>
		</extension>

		<!-- Setup Page Menu Item -->

		<extension point="cerberusweb.ui.page.menu.item">
			<id>wgmtwitter.setup.menu.plugins.twitter</id>
			<name>Twitter Plugins Menu Item</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwitter_SetupPluginsMenuItem</name>
			</class>
			<params>
				<param key="page_id" value="core.page.configuration" />
				<param key="menu_id" value="core.setup.menu.plugins" />
			</params>
		</extension>
		
		<!-- Setup Page Sections -->
		
		<extension point="cerberusweb.ui.page.section">
			<id>wgmtwitter.setup.twitter</id>
			<name>Setup Page Twitter Section</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwitter_SetupSection</name>
			</class>
			<params>
				<param key="page_id" value="core.page.configuration" />
				<param key="uri" value="twitter" />
			</params>
		</extension>
		
		<!-- Profile Page Sections -->
		
		<extension point="cerberusweb.ui.page.section">
			<id>cerberusweb.profiles.twitter.message</id>
			<name>Twitter Message Profile Section</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwitter_MessageProfileSection</name>
			</class>
			<params>
				<param key="page_id" value="core.page.profiles" />
				<param key="uri" value="twitter_message" />
			</params>
		</extension>
		
		<!-- Scheduled Jobs -->
		
		<extension point="cerberusweb.cron">
			<id>wgmtwitter.cron</id>
			<name>Twitter Checker</name>
			<class>
				<file>api/App.php</file>
				<name>Cron_WgmTwitterChecker</name>
			</class>
			<params />
		</extension>
		
		<!-- Event Actions -->
		
		<extension point="devblocks.event.action">
			<id>wgmtwitter.event.action.post</id>
			<name>Update Twitter Status</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwitter_EventActionPost</name>
			</class>
			<params>
				<param key="label" value="Post to Twitter" />
			</params>
		</extension>
		
    </extensions> 
</plugin>
